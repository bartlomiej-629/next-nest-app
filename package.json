{
  "name": "hijack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "watch": "turbo watch dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "release": "commit-and-tag-version",
    "prepare": "husky || true",
    "frontend": "turbo start --filter=frontend",
    "frontend:start": "turbo start --filter=frontend",
    "frontend:dev": "turbo dev --filter=frontend",
    "frontend:build": "turbo build --filter=frontend",
    "backend": "turbo start --filter=backend",
    "backend:start": "turbo start --filter=backend",
    "backend:dev": "turbo dev --filter=backend",
    "backend:start:debug": "turbo start:debug --filter=backend",
    "backend:start:prod": "turbo start:prod --filter=backend",
    "backend:build": "turbo build --filter=backend",
    "docker:dev": "pnpm run docker:dev:build && pnpm run docker:dev:up",
    "docker:dev:build": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.dev.yml build",
    "docker:dev:up": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.dev.yml up",
    "docker:dev:start": "docker compose -f docker-compose.dev.yml start",
    "docker:dev:stop": "docker compose -f docker-compose.dev.yml stop",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down -v --remove-orphans",
    "docker:build": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.yml build",
    "docker:up": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.yml up",
    "docker:start": "docker compose -f docker-compose.yml start",
    "docker:stop": "docker compose -f docker-compose.yml stop",
    "docker:down": "docker compose -f docker-compose.yml down --remove-orphans",
    "db:check": "turbo run db:check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "commit-and-tag-version": "12.4.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "supabase": "^1.190.0",
    "turbo": "^2.0.9",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=20"
  }
}
